<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
      <!-- mandango -->
      <parameter key="mandango.class">Mandango\Mandango</parameter>
      <parameter key="mandango.metadata_class">Model\Mapping\Metadata</parameter>
      <parameter key="mandango.metadata_output">%kernel.root_dir%/../src/Model/Mapping</parameter>

      <!-- cache -->
      <parameter key="mandango.cache.filesystem_cache">Mandango\Cache\FilesystemCache</parameter>
      <parameter key="mandango.cache.filesystem_cache.dir">%kernel.cache_dir%/mandango/query_cache</parameter>

      <!-- mondator -->
      <parameter key="mandango.mondator_class">Mandango\Mondator\Mondator</parameter>

      <!-- logger -->
      <parameter key="mandango.logger_class">Mandango\MandangoBundle\Logger\MandangoLogger</parameter>

      <!-- data collector -->
      <parameter key="mandango.data_collector_class">Mandango\MandangoBundle\DataCollector\MandangoDataCollector</parameter>
    </parameters>

    <services>
      <!-- mandango -->
      <service id="mandango" class="%mandango.class%">
          <argument type="service" id="mandango.metadata" />
          <argument type="service" id="mandango.query_cache.filesystem" />
      </service>

      <service id="mandango.metadata" class="%mandango.metadata_class%">
      </service>

      <!-- query cache -->
      <service id="mandango.query_cache.filesystem" class="%mandango.cache.filesystem_cache%">
          <argument>%mandango.cache.filesystem_cache.dir%</argument>
      </service>

      <!-- mondator -->
      <service id="mandango.mondator" class="%mandango.mondator_class%">
      </service>

      <!-- logger -->
      <service id="mandango.logger" class="%mandango.logger_class%">
          <argument type="service" id="logger" on-invalid="null" />
      </service>

      <!-- data collector -->
      <service id="mandango.data_collector" class="%mandango.data_collector_class%" public="false">
          <tag name="data_collector" template="MandangoBundle:Collector:mandango" id="mandango" />
          <argument type="service" id="mandango.logger" />
      </service>

      <!-- form -->
      <service id="form.type.mandango_document" class="Mandango\MandangoBundle\Form\Type\MandangoDocumentType">
          <tag name="form.type" alias="mandango_document" />
      </service>
    </services>
</container>
